# $Header: $

depend() {
	need localmount net
	before xdm
	keyword -timeout
}

start() {
	ebegin "Starting dkms"
	  dkms-gentoo check
	eend $?
}

stop() {
	ebegin "Stopping dkms"
	  if [ -f '/var/tmp/dkms_failed' ];then
		eend 0
	  else
		dkms-gentoo db
	  fi
	eend $?
}


